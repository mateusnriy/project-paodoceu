// frontend/tsconfig.json
{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Alias Path CORREÇÃO (Causa 1) */
    "baseUrl": "./src", // <<< CORRIGIDO
    "paths": {
      "@/*": ["*"] // <<< CORRIGIDO
    },

    /* Linting */
    "strict": true,
    "noUnusedLocals": true, // (Causa 10)
    "noUnusedParameters": true, // (Causa 10)
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true // (Causa 9)
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
